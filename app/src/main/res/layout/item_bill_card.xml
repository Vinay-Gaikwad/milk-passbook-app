<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="12dp">

        <!-- Shift (शिफ्ट) - Top line -->
        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="शिफ्ट: सकाळ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Combined details (Liter | Fat | SNF | Rate) - Middle line -->
        <TextView
            android:id="@+id/tvShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="लिटर: 2.00 | फॅट: 4.5 | SNF: 8.5 | दर: ₹30.50"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"/>

        <!-- Total Amount (रक्कम) - Bottom line -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="रक्कम: ₹57.4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#D50000"
            android:layout_marginTop="4dp" />

        <!-- Hidden Views (Kept for potential future use) -->
        <TextView
            android:id="@+id/tvMilkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="दूध प्रकार: गाय"/>

        <TextView
            android:id="@+id/tvCustomerNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="लिटर: 2.00"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvLiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>