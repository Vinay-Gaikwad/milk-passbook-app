<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- Top Profile Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/topCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="16dp"
                android:background="@android:color/white">


                <LinearLayout
                    android:id="@+id/profileSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/profile"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:padding="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="रायन ब्लेक"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="क्रमांक: 9876543210"
                            android:textSize="15sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvDairyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="दुध संस्था: कोल्हापुर"
                            android:textSize="15sp"
                            android:textColor="#666666" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dot_menu"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="Menu"
                    android:padding="4dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Toggle Menu -->
        <LinearLayout
            android:id="@+id/toggleMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/toggle_menu_background"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <!-- Daily Bill -->
            <LinearLayout
                android:id="@+id/btnDaily"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/toggle_selected_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="दैनंदिन पावती"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Periodic Bill -->
            <LinearLayout
                android:id="@+id/btnPeriodic"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="दूध बिल"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!-- Add this after the toggleMenu LinearLayout -->
        <RadioGroup
            android:id="@+id/radioGroupMilkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBuffalo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="म्हैस"

                />

            <RadioButton
                android:id="@+id/radioCow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="गाय"
                android:layout_marginLeft="20dp"
                android:checked="true"
            />

        </RadioGroup>


        <ProgressBar
            android:id="@+id/loadingSpinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutDailyBills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/layoutPeriodicBills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
