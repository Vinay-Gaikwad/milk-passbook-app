<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.AppCompat.NoActionBar">
        <!-- Keep system bars visible -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Status bar color to match app background -->
        <item name="android:statusBarColor">#121212</item> <!-- your nav bg color -->

        <!-- Navigation bar color to match app bottom nav -->
        <item name="android:navigationBarColor">#121212</item>

        <!-- Window background (behind everything) -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Ensure translucent flags off so colors apply properly -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- If you want light nav icons for dark background -->

        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


</resources>
